{% extends 'base.html.twig' %}

{% block body %}
    <section class="pr mt-0 mw-100">
        <div class="profile-header">
            <div class="profile-header-cover"></div>
                <div class="profile-header-content d-flex flex-row ">
                    <div class="profile-header-img">
                        <img style="width: 200px; height: 200px; object-fit: cover;" class="card-img-top rounded-circle" src="{{ app.user.image}} responsive" alt="Card image cap">
                    </div>
                    <div class="profile-header-info align-self-center p-4">
                        <h2> {{ app.user.firstName }} {{ app.user.lastName }}<h2>
                        <h4 class="text-muted">{{ app.user.groupName.name }} - {{ app.user.groupName.promo }}</h3>
                    </div>
                </div>
            </div>
        </div>
        </section>
    <div class="flexion row justify-content-center">
     <div class="user col user-info">
            <h3>Info</h3>
            <ul>
                <li>Pr√©nom : {{ user.firstName }}</li>
                <li>Nom : {{ user.lastName }}</li>
                <li>email : {{ user.email }}</li>
                <li>Groupe : {{ user.groupName.name }}</li>
                <li>Promo : {{ user.groupName.promo }}</li>
                <li>Job en alternance : {{ user.alternanceJob }}</li>
                <li>Date de naissance : {{ user.birthDate  | date('d/m/Y') }}</li>
            </ul>
        </div>
        <div class="user-post col justify-content-center">
            
            <section class="posts ">
                <h3>Posts</h3>
                {% for post in user.posts %}
                {{ include('_post.html.twig')}}
                {% endfor %}
            </section>
        </div>
    </div>
</div>
{% endblock %}
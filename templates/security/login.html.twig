{% extends 'base.html.twig' %}

{% block body %}

    <h1>Connexion !</h1>

    <form action="{{ path('security_login') }}" method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}
        <div class="form-group mb-2">
            <input type="text" placeholder="Adresse email..." required name="_username" class="form-control">
        </div>
        <div class="form-group mb-2">
            <input type="password" placeholder="Mot de passe ..." required name="_password" class="form-control">
        </div>
        <div class="form-group mb-2">
            <button type="submit" class="btn btn-primary">Connexion !</button>
        </div>
        <div class="form-group mb-2">
            <a href="{{ path('security_registration') }}"><button type="button" class="btn btn-outline-primary">Inscriptions</button></a>
        </div>
    </form>

{% endblock %}
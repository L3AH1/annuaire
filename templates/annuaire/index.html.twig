{% extends 'base.html.twig' %}

{% block title %}Hello AnnuaireController!{% endblock %}

{% block body %}
    <section class="posts mt-2">
        {% for post in posts %}
            <article class="card p-3 my-2" style="width: 435px">
                <div class="d-flex flex-row">
                    <img class="rounded-circle" style="width: 45px; height: 45px;" src="https://images.unsplash.com/photo-1517849845537-4d257902454a?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=435&q=80" alt="profil picture">
                <div class="px-3">
                    <h5 class="mb-0">Julie Castier</h4>
                    <div class="metadata small text-muted">{{ post.createdAt | date('d/m/Y')}} Ã  {{ post.createdAt | date('H:i')}} - <span>M1TL</span></div>
                </div>
                </div>
                <div class="content my-2">
                    <h6 class="card-subtitle my-2">{{ post.name }}</h6>
                    <div class="mb-2">{{ post.content }}</div>
                    <img style="width: 100%" class="img-responsive" src={{ post.image }} alt="image">
                </div>
            </article>
        {% endfor %}
    </section>
{% endblock %}